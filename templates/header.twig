{% set headercolor = '' %}

{% for item in post.get_field('blokken') %}
	{% if item.acf_fc_layout == 'banner' %}
		{% set headercolor = 'text-white' %}
	{% endif %}
{% endfor %}


<header class="header text-white">
	<div class="container"> 
		<div class="row g-2">
			<div class="col-auto d-flex align-items-center">
				<a class="header-brand" href="{{site.url}}" rel="home">
					<span class="d-none">{{ site.name }}</span>
				</a>
			</div>
			<div class="col d-none d-lg-flex align-items-center">
				{% include "menu.twig" with {'items': menu.get_items} %}
			</div>
			<div class="col-auto d-none d-lg-flex align-items-center">
				<img src="{{ theme.link }}/assets/img/headerlogos.svg" height="46px" width="112px" style="transform: translateY(-14px);">
			</div>
			<div class="col-auto d-flex 	d-lg-none align-items-center">
				<p class="weight-400 mb-0" style="font-size: 13px; transform: translateY(10px);"> Écht biologisch, écht lekker</p>
			</div>
		</div>
	</div>
</header>