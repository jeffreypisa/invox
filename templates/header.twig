{% set headercolor = '' %}

{% if fn('is_front_page') %}
	{% set headercolor = 'text-white' %}
{% endif %}

{% if fn('is_404') %}
	{% if options.achtergrond404 %}
		{% set headercolor = 'text-white' %}
	{% endif %}
{% endif %}

{% for item in post.get_field('blokken') %}
	{% if item.acf_fc_layout == 'banner' %}
		{% if item.afbeelding %}
			{% set headercolor = 'text-white' %}
		{% endif %}
	{% endif %}
{% endfor %}

<header class="header {{ headercolor }}">
	<div class="container-fluid px-md-5"> 
		<div class="row g-2">
			<div class="col d-flex align-items-center">
				<a class="header-brand immune" href="{{site.url}}" rel="home">
					<div class="logo-kleur" style="background-image: url({{ Image(options.logo_kleur).src }})"></div>
					<div class="logo-white" style="background-image: url({{ Image(options.logo_white).src }})"></div>
					<span class="d-none">{{ site.name }}</span>
				</a>
			</div>
			<div class="col-auto d-none d-lg-flex align-items-center">
				{% include "menu.twig" with {'items': menu.get_items} %}
			</div>
			<div class="col-auto d-lg-none">
				<a id="mobilemenubtn" class="btn-menu d-block immune js-menu d-lg-none">
					<div class="lines">
						<span></span>
						<span></span>
						<span></span>
					</div>
				</a>
			</div>
		</div>
	</div>
</header>