<section id="section{{ sectionno }}" class="mod-content {{ item.achtergrond }}" data-scroll-section>
	<div class="container">
		<div class="row">
			<div class="col-md-10 {% if item.links_uitlijnen %}col-lg-6 offset-md-0 offset-lg-1{% else %}col-lg-8 offset-md-1 offset-lg-2{% endif %} anime-fadein">
				{% if item.tagline %}
					<span class="sub"> {{ item.tagline }}</span>
				{% endif %}
				{% if item.titel %}
					<h2> {{ item.titel }}</h2>
				{% endif %}
				{% if item.lead %}
					<p class="lead"> {{ item.lead }}</p>
				{% endif %}
				{{ item.tekst }}
				{% if item.knop or item.link %}
					<br>
				{% endif %}
				{% if item.knop %}
					<a href="{{ item.knop.url }}" target="{{ item.knop.target }}" class="btn btn-primary mb-3" style="margin-right: 20px;"> <span>{{ item.knop.title }}</span> </a>
				{% endif %}
				{% if item.link %}
					<a href="{{ item.link.url }}" target="{{ item.link.target }}" class="btn-link d-inline-block mb-3"> {{ item.link.title }} </a>
				{% endif %}
			</div>
		</div>
	</div>
</section> 