<section id="section{{ sectionno }}" class="mod-content {{ item.achtergrond }}" data-scroll-section>
	<div class="container anime-fadein {% if item.centreren %} text-center {% endif %}">
		{% if item.titel %}
			<h2> {{ item.titel }}</h2>
		{% endif %}
		{% if item.tekst %}
			<p class="text-lg d-inline-block mb-5" style="max-width: 660px"> {{ item.tekst }}</p>
		{% endif %}
		
		<div class="row {% if item.slider_mobile %} js-slick-contentmobile {% endif %}">
			{% set columns = item.kolom|length  %}
			{% set indeling = item.indeling_kolommen  %}
			{% set centreren = item.centreren  %}
			{% set kolomno = '1' %}
			
			{% for item in item.kolom %}
				
				<div class="order-{{ item.volgorde_mobiel }} order-lg-{{ loop.index }} col-lg 
					{% if columns == '2' %}
						{% if loop.first %}
							{% if indeling == 'onethird_twothird' %}
								col-lg-4
							{% elseif indeling == 'twothird_onethird' %}
								col-lg-8
							{% endif %}
						{% else %}
							{% if indeling == 'onethird_twothird' %}
								col-lg-8
							{% elseif indeling == 'twothird_onethird' %}
								col-lg-4
							{% endif %}
						{% endif %}
					{% endif %}
					">
					
					{% set blokno = '1' %}
					
					{% for blok in item.blok %}
					
						{% if blok.acf_fc_layout == 'titel' %}
							<h2 class="titel mb-3 {% if blok.handgeschreven_font %}h3 weight-400 altfont{% endif %}"> {{ blok.titel }} </h2>
						
						{% elseif blok.acf_fc_layout == 'lead' %}
							<p class="text-lg mb-5 {% if centreren  %}m-auto{% endif %}" style="max-width: 660px;">{{ blok.tekst }}</p>
						
						{% elseif blok.acf_fc_layout == 'quote' %}
							<h3 class="weight-400 text-center"> {{ blok.titel }} </h3>
						
						{% elseif blok.acf_fc_layout == 'tekst' %}
							<div class="tekst mb-3 {% if centreren  %}m-auto{% endif %} {% if columns == '1' %}w80{% endif %} {% if blok.text_large %}text-lg{% endif %}">{{ blok.tekst }}</div>
						
						{% elseif blok.acf_fc_layout == 'dier' %}
							<div class="dier mb-5">
								<div class="row">
									<div class="col-4 col-md-12">
										<h3 class="display-4 weight-400 altfont d-block text-center text-green mb-0 mb-md-4">{{ blok.titel }}</h3>
										<div class="d-inline-block mb-2" style="width: 100%; max-width: 400px">
											<div class="image-holder image ratio-4x3">
												<div class="fill-space bg-contain" style="background-image: url({{ Image(blok.afbeelding)|resize(1024) }})"></div>
											</div>
										</div>
										<hr class="d-none d-lg-block">
									</div>
									<div class="col-8 col-md-12 d-flex align-items-center">
										<span class="text-sm">{{ blok.Tekst }}</span>
									</div>
								</div>
							</div>
						
						{% elseif blok.acf_fc_layout == 'knop' %}
							{% if blok.link %}
								<br>
								<a href="{{ blok.link.url }}" target="{{ blok.link.target }}" class="btn btn-primary mb-5 d-inline-block"> {{ blok.link.title }} </a>
							{% endif %}
						
						{% elseif blok.acf_fc_layout == 'afbeelding' %}
							{% if blok.afsnijden %}
								<div class="d-inline-block mb-3" style="width: 100%; max-width: 500px">
									<div class="image-holder image ratio-4x3">
										<div class="fill-space bg-contain" style="background-image: url({{ Image(blok.afbeelding)|resize(1024) }})"></div>
									</div>
								</div>
							{% else %}
								<div class="d-inline-block mb-3" style="width: 100%; max-width: 500px">
									<img class="image-normal" src="{{ Image(blok.afbeelding)|resize(1024) }}">
								</div>
							{% endif %}
								
						{% elseif blok.acf_fc_layout == 'profielfoto' %}
							<div class="afbeelding text-center mb-5">
								<div class="image-holder rounded">
									<div class="fill-space bg-cover" style="background-image: url({{ Image(blok.afbeelding)|resize(1024) }})"></div>
								</div>
								<h3 class="altfont text-green mb-0 h2 weight-400"> {{ blok.titel }} </h3>
								<p> {{ blok.tekst }} </p>
							</div>
							
						{% elseif blok.acf_fc_layout == 'accordion' %}	
							
							<div class="accordion" id="accordion_{{ sectionno }}_{{ kolomno }}_{{ blokno }}">
								
								{% set onderdeelno = '1' %}
								{% for onderdeel in blok.onderdeel %}
								
									
								  <div class="item" data-aos-easing="ease-in-sine">
									  <a id="heading_{{ sectionno }}_{{ kolomno }}_{{ blokno }}_{{ onderdeelno }}" class="heading bg-lightblue" 
									  
									  data-bs-toggle="collapse" data-bs-target="#collapse_{{ sectionno }}_{{ kolomno }}_{{ blokno }}_{{ onderdeelno }}" aria-controls="collapse_{{ sectionno }}_{{ kolomno }}_{{ blokno }}_{{ onderdeelno }}">
										  <div class="row">
											<div class="col-auto">
												<img src="{{ theme.link }}/assets/img/plus.svg" width="20" height="20">
											</div>
											<div class="col">
												<h5 class="mb-0">{{ onderdeel.titel }}</h5>
											</div>
										  </div>
									  </a>
									<div id="collapse_{{ sectionno }}_{{ kolomno }}_{{ blokno }}_{{ onderdeelno }}" class="collapse" aria-labelledby="heading_{{ sectionno }}_{{ kolomno }}_{{ blokno }}" data-bs-parent="#accordion_{{ sectionno }}_{{ kolomno }}_{{ blokno }}">
										<div class="content">
											{{ onderdeel.tekst }}
										</div>
									</div>
								  </div>
								  {% set onderdeelno = onderdeelno + '1' %}
								{% endfor %}
								
							</div>
							
							
						{% endif %}
						{% set blokno = blokno + 1 %}
					{% endfor %}
				</div>
				{% set kolomno = kolomno + 1 %}
			{% endfor %}
		</div>
	</div>
</section> 