<section class="mod-video {{ item.achtergrond }}" data-scroll-section>
	<div class="container anime-fadein">
		{% if item.screenshot %}
			<a class="videotile noline" href="{{ item.video }}" data-lity>
	      		<div class="image-holder">
	      			<i class="fas fa-play"></i>
	      			<div class="image ratio-16x9" style="background-image: url({{ Image(item.screenshot) }}"></div>
	      		</div>
			</a>
		{% else %}
			{{ item.video }}
		{% endif %}
	</div>
</section>