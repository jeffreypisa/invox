{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">	
			<section class="mod-header bg-greylight"  data-scroll-section>
				<div class="container">
					<div class="row">
						<div class="col-md-6 col-lg-5 offset-lg-1 d-flex align-items-center mb-5 mb-md-0">
							<div>
							<h1 class="h2 mb-2"> {{ post.title }} </h1>
							<h5>{{ post.functie }}</h5>
							{{ post.korte_beschrijving }}
							{% if post.knop %}
								<div class="clearfix"></div>
								<br>
								<a href="{{ post.knop.url }}" target="{{ post.knop.target }}" class="btn btn-primary"> {{ post.knop.title }} </a>
							{% endif %}
							</div>
						</div>
						<div class="col-md-5 offset-md-1 col-lg-4 offset-lg-1">
							<div class="ratio-3x4 w-100 mb-30 anime-reveal">
								<div class="bg-cover" style="background-image: url({{ Image(post.thumbnail)|resize(1024) }})"></div>
							</div>
						</div>
					</div>
				</div>
			</section>
			<section class="mod-content bg-white"  data-scroll-section>
				<div class="container">
					<div class="row">
						<div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
							{{post.content}}
						</div>
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
