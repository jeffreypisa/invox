<!doctype html>
<!--[if lt IE 9]><html class="no-js no-svg ie lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 9]><html class="no-js no-svg ie ie9 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 9]><!--><html class="no-js no-svg" {{ site.language_attributes }}> <!--<![endif]-->
<head>
    <meta charset="{{ site.charset }}" />
    <meta name="description" content="{{ site.description }}">
    <link rel="stylesheet" href="{{ theme.link }}/style.css" type="text/css" media="screen" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="author" href="{{ theme.link }}/humans.txt" />
    <link rel="pingback" href="{{ site.pingback_url }}" />
    <link rel="profile" href="http://gmpg.org/xfn/11">
    
    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ options.apple_touch_icon.url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ options.favicon_32x32.url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ options.favicon_16x16.url }}">
    <link rel="mask-icon" href="{{ options.safari_pinned_tab.url }}" color="{{ options.kleur_basis }}">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">
    
    {{function('wp_head')}}
    
    {% set kleur_basis = options.kleur_basis %}
    {% set kleur_secundair = options.kleur_secundair %}
    {% set kleur_actie = options.kleur_actie %}
    
    <style>
        
        /* Primair */
        
        .mod-content ul li:after,
        .bg-basis {
            background: {{ kleur_basis }};
        }
                 
        .btn-secondary {
            background: {{ kleur_basis }};
            color: #fff;
        }
        
        /* Secundair */
                
        .bg-actie {
            background: {{ kleur_secundair }};
        }   
         
        .sub.withbar,
        .mod-bannerslider .bannerslider .slick-slide .item .sub,
        .mod-banner.text-white .sub {
            border-color: {{ kleur_secundair }};
        }
           
        .bg-gradient {
            background: linear-gradient(180deg, rgba({{ kleur_secundair|hex2rgb }}, 0) 0%, rgba({{ kleur_secundair|hex2rgb }}, 0.4) 100%) !important;
        }
        
        .team .bg-gradient {
            background: linear-gradient(180deg, rgba({{ kleur_secundair|hex2rgb }}, 0) 0%, rgba({{ kleur_secundair|hex2rgb }}, 0.8) 100%) !important;
        }
        
        /* Actie */
        
        .mod-bannerslider .bannerslider-nav .item a .bg /*,
        .opensidemenu .btn-menu */{
            background: {{ kleur_actie }};
        }
        
        .btn,
        .btn:hover,
        .btn:focus,
        body .nf-form-content button, 
        body .nf-form-content input[type=button],
        body .nf-form-content input[type=submit],
        body .nf-form-content button:hover, 
        body .nf-form-content input[type=button]:hover,
        body .nf-form-content input[type=submit]:hover {
            background: {{ kleur_actie }};
            border-color: {{ kleur_actie }};
        }
        
        .dropdown a:hover+.dropdown-menu .nav-item a:hover, 
        .dropdown .dropdown-menu:hover .nav-item a:hover,
        .mod-mobilemenu ul li a:hover, .mod-mobilemenu ul li a:focus,
        .mod-bannerslider .selector,
        .text-white a:not(.immune):hover,
        .mod-bannerslider .bannerslider-nav .item.active,
        .nf-form-content .list-select-wrap .nf-field-element>div:focus, 
        .nf-form-content input:not([type=button]):focus, 
        .nf-form-content textarea:focus {
            border-color: {{ kleur_actie }};
        }
        
        .mod-bannerslider .bannerslider-nav .item.active a[href] + .item-header, 
        .tease-post:hover h3, 
        .text-white a:not(.immune):hover,
        .mod-categories a.active h5,
        .mod-categories a:hover h5,
        header ul li.current-page-ancestor a,
        header ul li.current-page-ancestor a:hover,
        header ul li.current_page_item a,
        header ul li.current_page_item a:hover,
        body.tax-nieuws_categorie header ul li.menu-item-250 a,
        body.tax-nieuws_categorie header ul li.menu-item-250 a:hover,
        body.single-nieuws header ul li.menu-item-250 a,
        body.single-nieuws header ul li.menu-item-250 a:hover,
        body.single-team header ul li.menu-item-202 a,
        body.single-team header ul li.menu-item-202 a:hover,
        header .dropdown a:hover+.dropdown-menu .nav-item a:hover, 
        header .dropdown .dropdown-menu:hover .nav-item a:hover,
        header .dropdown .dropdown-menu .nav-item.current-menu-item a, 
        header .dropdown .dropdown-menu .nav-item.current-menu-item a:hover, 
        header.text-white ul li.current-page-ancestor a,
        header.text-white ul li.current-page-ancestor a:hover,
        header.text-white ul li.current_page_item a,
        header.text-white ul li.current_page_item a:hover,
        header.nav-up ul li a:hover, 
        header.nav-down ul li a:hover,
        header.text-white ul li.current_page_item a,
        header.text-white.nav-up ul li a:hover, 
        header.text-white.nav-down ul li a:hover {
            color: {{ kleur_actie }};
        }
        
        a:not(.btn),
        a:not(.btn):hover,
        a:not(.btn):focus,
        .btn-link,
        .btn-link:hover,
        .btn-link:focus {
            color: {{ kleur_actie }}
        }
        
        .mod-content a:not(.btn):before,
        .mod-categories a:not(.btn):before,
        .mod-teamoverview a:not(.btn):before,
        header a:not(.btn):before {
            background: {{ kleur_actie }}
        }
    </style>
</head>