{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">	
			<section data-scroll-section>
				<div class="container">
					<div class="row">
						<div class="col-md-10 offset-md-1">
							<a href="{{ site.url }}/news" class="d-inline-block btn-link prev mb-5"> 
								Back to archive 
							</a>
						</div>
					</div>
					<div class="row">
						<div class="col-md-10 col-lg-8 offset-md-1 offset-lg-2">
							<h1 class="h2"> {{ post.title }} </h1>
							<div class="date">
								<div class="line bg-basis"></div> {{ post.date }}
							</div>
							<div class="mod-content">
								{{post.content}}
							</div>
						</div>
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
